---
const education = [
  {
    degree: "Advanced Diploma in Cyber Defense",
    institution: "Red Team Hacker Academy, Perinthalmanna",
    year: "Oct 2024 – June 2025",
    description: "Focus: Red Teaming, Advanced Penetration Testing, and Network Defense strategies."
  },
  {
    degree: "Computer Software Engineering",
    institution: "Ma'din Polytechnic College Malappuram",
    year: "2021 — 2024",
    description: "Focused on Computer Science fundamentals, Software Engineering, and Web Development."
  },
  {
    degree: "Higher Secondary Education",
    institution: "National Institute of Open Schooling (NIOS)",
    year: "Ongoing",
    description: ""
  }
];
---

<section id="education" class="py-16 md:py-32 px-4 reveal">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-sm text-muted uppercase tracking-widest mb-16">Education</h2>

    <div class="relative border-l border-primary/10 ml-3 md:ml-6 space-y-12">
      {education.map((item) => (
        <div class="relative pl-8 md:pl-12">
          <!-- Dot -->
          <div class="absolute -left-[5px] top-2 w-2.5 h-2.5 rounded-full bg-secondary shadow-[0_0_10px_var(--color-secondary)]"></div>
          
          <div class="flex flex-col sm:flex-row sm:items-baseline sm:justify-between mb-2">
            <h3 class="text-2xl md:text-3xl font-bold text-primary">{item.degree}</h3>
            <span class="text-sm font-mono text-muted mt-1 sm:mt-0">{item.year}</span>
          </div>
          
          <h4 class="text-lg text-secondary mb-4">{item.institution}</h4>
          <p class="text-muted max-w-2xl leading-relaxed">
            {item.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
