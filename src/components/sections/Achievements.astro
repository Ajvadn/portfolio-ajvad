import { Shield, Bug, ExternalLink } from 'lucide-react';
---

<section id="achievements" class="py-16 md:py-32 px-4 reveal">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-sm text-muted uppercase tracking-widest mb-16">Achievements</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {achievements.map((item) => (
        <div class="group border border-primary/10 bg-primary/5 hover:border-secondary/30 transition-all duration-500 overflow-hidden relative p-8 glass-card">
            <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                {item.icon === 'shield' ? <Shield size={100} /> : <Bug size={100} />}
            </div>

            <div class="relative z-10">
                <div class="flex justify-between items-start mb-6">
                    <div>
                        <h3 class="text-2xl font-bold text-primary group-hover:text-secondary transition-colors duration-300">
                        {item.title}
                        </h3>
                        <p class="text-sm text-muted mt-2">{item.organization}</p>
                    </div>
                    <div class="flex flex-col items-end gap-2">
                        <span class="text-xs font-mono text-muted/60 border border-primary/10 px-2 py-1 rounded-full">
                            {item.date}
                        </span>
                        <div class="flex gap-2">
                             {item.severity && (
                                <span class={`text-[10px] font-bold px-2 py-0.5 rounded-full border ${
                                    item.severity === 'Medium' ? 'border-orange-500/30 text-orange-500' :
                                    item.severity === 'P4' ? 'border-yellow-500/30 text-yellow-500' : 
                                    item.severity === 'P5' || item.severity === 'Info' ? 'border-blue-500/30 text-blue-500' : 
                                    'border-primary/30 text-primary'
                                }`}>
                                    {item.severity}
                                </span>
                            )}
                            {item.status && (
                                <span class={`text-[10px] font-bold px-2 py-0.5 rounded-full border ${
                                    item.status === 'Duplicate' ? 'border-orange-500/30 text-orange-500' : 
                                    item.status === 'Informative' ? 'border-blue-400/30 text-blue-400' :
                                    item.status === 'Archived' ? 'border-gray-500/30 text-gray-500' :
                                    'border-primary/30 text-primary'
                                }`}>
                                    {item.status}
                                </span>
                            )}
                        </div>
                    </div>
                </div>
                
                <p class="text-muted leading-relaxed group-hover:text-primary/80 transition-colors">
                {item.description}
                </p>

                {item.certificateUrl && (
                    <a 
                        href={item.certificateUrl} 
                        target="_blank" 
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-2 text-xs font-medium text-secondary hover:text-secondary/80 transition-colors mt-6 bg-secondary/10 px-4 py-2 rounded-full border border-secondary/20 hover:border-secondary/40 transition-all duration-300"
                    >
                        <ExternalLink size={14} />
                        View Certificate
                    </a>
                )}
            </div>
        </div>
      ))}
    </div>
  </div>
</section>
