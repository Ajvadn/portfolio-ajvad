---
interface Props {
  text: string;
  variant?: 'default' | 'outline';
}

const { text, variant = 'default' } = Astro.props;
---

<span class:list={[
  "px-3 py-1 rounded-full text-xs font-medium tracking-wide transition-colors duration-300 shimmer",
  variant === 'default' && "bg-primary/5 text-muted border border-primary/10 hover:text-primary hover:border-secondary/20",
  variant === 'outline' && "border border-primary/10 text-muted hover:text-primary hover:border-secondary/20"
]}>
  {text}
</span>
